class Animal {
  constructor(breed = "human", name = "Nobody", lang = "squeak") {
    this.breed = breed;
    this.name = name;
    this.language = lang;
  }

  talk() {
    print(this.language);
  }

  expressYourself() {
    print("Hello, I'm " + this.breed, "I " + this.language);
  }
}

function setup() {

  // create Hamster
  let Hamster = new Animal("Hamster", "Squeaky", "squeak");

  // let them talk
  Hamster.talk();
  Hamster.expressYourself();

}

function setup() {
  // create Black Cat
  let Hamster = new Animal("Squeaky the Hamster", "straight");
  let redHamster = new Animal("Tiger");
  
  //let them talk
  Hamster.talk();
  Hamster.expressYourself();
  
  redHamster.talk();
}

